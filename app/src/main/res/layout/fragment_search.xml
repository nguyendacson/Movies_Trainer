<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ui.menu.SearchFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_bg_all_screen"
        android:paddingTop="20dp"
        android:paddingBottom="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="25dp"
            app:layout_constraintBottom_toTopOf="@id/title2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/title1_Textview"
                style="@style/CustomTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                android:text="@string/search"
                app:layout_constraintBottom_toTopOf="@id/title2"
                app:layout_constraintEnd_toEndOf="@id/title1"
                app:layout_constraintStart_toStartOf="@id/title1"
                tools:ignore="HardcodedText,MissingConstraints,NotSibling" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingHorizontal="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/searchWrapper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_max="488dp">

                <EditText
                    android:id="@+id/edt_Search"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/custom_edt_rectangle_purple"
                    android:drawableEnd="@drawable/btn_search"
                    android:hint="@string/search"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingHorizontal="20dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/menuBeforeDetail"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btnFilter"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.85"
                    tools:ignore="Autofill" />

                <ImageView
                    android:id="@+id/btnFilter"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_filter"
                    android:importantForAccessibility="no"
                    app:layout_constraintBottom_toBottomOf="@id/edt_Search"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/edt_Search"
                    app:layout_constraintTop_toTopOf="@id/edt_Search" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mainItemSearch"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/main_search"
            android:paddingHorizontal="25dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title2"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="NotSibling" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/hintConstraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageSearchNull"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/img_search"
                app:layout_constraintEnd_toEndOf="@+id/hintConstraint"
                app:layout_constraintStart_toStartOf="@+id/hintConstraint"
                tools:ignore="ContentDescription,MissingConstraints" />

            <TextView
                android:id="@+id/tvSearchNull1"
                style="@style/CustomTextMovie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="We Are Sorry, We Can"
                app:layout_constraintEnd_toEndOf="@+id/hintConstraint"
                app:layout_constraintStart_toStartOf="@+id/hintConstraint"
                app:layout_constraintTop_toBottomOf="@+id/imageSearchNull"
                tools:ignore="HardcodedText,MissingConstraints" />

            <TextView
                android:id="@+id/tvSearchNull2"
                style="@style/CustomTextMovie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Find The Movie :("
                app:layout_constraintEnd_toEndOf="@+id/hintConstraint"
                app:layout_constraintStart_toStartOf="@+id/hintConstraint"
                app:layout_constraintTop_toBottomOf="@+id/tvSearchNull1"
                tools:ignore="HardcodedText,MissingConstraints" />

            <TextView
                android:id="@+id/tvSearchNull3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Find your movie by Type title,"
                android:textColor="#92929D"
                app:layout_constraintEnd_toEndOf="@+id/hintConstraint"
                app:layout_constraintStart_toStartOf="@+id/hintConstraint"
                app:layout_constraintTop_toBottomOf="@+id/tvSearchNull2"
                tools:ignore="HardcodedText,MissingConstraints" />

            <TextView
                android:id="@+id/tvSearchNull4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="categories, years, etc "
                android:textColor="#92929D"
                app:layout_constraintEnd_toEndOf="@+id/hintConstraint"
                app:layout_constraintStart_toStartOf="@+id/hintConstraint"
                app:layout_constraintTop_toBottomOf="@+id/tvSearchNull3"
                tools:ignore="HardcodedText,MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>