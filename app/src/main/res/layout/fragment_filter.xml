<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ui.FilterFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/screenFilter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_all_screen"
        android:paddingTop="20dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/screen1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints,UseCompoundDrawables,UselessLeaf">

            <ImageView
                android:id="@+id/imageBackSearchFilter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="5dp"
                android:src="@drawable/btn_back"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/Title"
                style="@style/CustomTextMovie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/search_filters"
                android:textSize="20sp"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/screen2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="12dp"
            app:layout_constraintTop_toBottomOf="@id/screen1">

            <TextView
                android:id="@+id/sortBy"
                style="@style/CustomTextMovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/sort_by"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:id="@+id/ascendingLinear"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp"
                app:layout_constraintTop_toBottomOf="@id/sortBy"
                tools:ignore="InefficientWeight,MissingConstraints,Suspicious0dp,UseCompoundDrawables,UselessParent">

                <TextView
                    android:id="@+id/valueAscending"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <ImageView
                    android:id="@+id/tickAscending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_tick"
                    android:visibility="gone"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ascendingLinear1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp"
                app:layout_constraintTop_toBottomOf="@id/ascendingLinear"
                tools:ignore="InefficientWeight,MissingConstraints,Suspicious0dp,UseCompoundDrawables,UselessParent">

                <TextView
                    android:id="@+id/valueDescending"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <ImageView
                    android:id="@+id/tickDescending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_tick"
                    android:visibility="gone"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/screen3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="12dp"
            app:layout_constraintTop_toBottomOf="@id/screen2">

            <TextView
                android:id="@+id/sortType"
                style="@style/CustomTextMovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/type"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:id="@+id/ascendingLinear2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp"
                app:layout_constraintTop_toBottomOf="@id/sortType"
                tools:ignore="InefficientWeight,MissingConstraints,Suspicious0dp,UseCompoundDrawables,UselessParent">

                <TextView
                    android:id="@+id/valueEvaluate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <ImageView
                    android:id="@+id/tickEvaluate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_tick"
                    android:visibility="gone"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ascendingLinear3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp"
                app:layout_constraintTop_toBottomOf="@id/ascendingLinear2"
                tools:ignore="InefficientWeight,MissingConstraints,Suspicious0dp,UseCompoundDrawables,UselessParent">

                <TextView
                    android:id="@+id/valueYear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <ImageView
                    android:id="@+id/tickYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_tick"
                    android:visibility="gone"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ascendingLinear4"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp"
                app:layout_constraintTop_toBottomOf="@id/ascendingLinear3"
                tools:ignore="InefficientWeight,MissingConstraints,Suspicious0dp,UseCompoundDrawables,UselessParent">

                <TextView
                    android:id="@+id/valueVoteCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <ImageView
                    android:id="@+id/tickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_tick"
                    android:visibility="gone"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>