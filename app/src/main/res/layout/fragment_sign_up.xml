<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ui.auth.SignUpFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_bg_all_screen"
        android:orientation="vertical"
        android:paddingHorizontal="18dp"
        android:paddingTop="20dp"
        tools:ignore="ScrollViewSize,UselessLeaf,UselessParent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/const1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                app:layout_constraintEnd_toStartOf="@id/btnBackSignUp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints,NestedWeights,NotSibling">

                <Button
                    android:id="@+id/buttonBack"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text="" />

                <ImageView
                    android:id="@+id/btnBackSignUp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="left|center_vertical"
                    android:importantForAccessibility="no"
                    android:src="@drawable/btn_back"
                    tools:ignore="RtlHardcoded" />
            </FrameLayout>

            <TextView
                android:id="@+id/newAccount"
                style="@style/CustomTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Account"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText,MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingVertical="10dp"
            app:layout_constraintTop_toBottomOf="@+id/const1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/const2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:clipChildren="false"
                android:maxHeight="1000dp"
                android:orientation="vertical"
                android:paddingStart="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/const1"
                tools:ignore="RtlSymmetry,ScrollViewSize,UselessLeaf,UselessParent">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Full name"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="HardcodedText,MissingConstraints,NestedWeights" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" "
                    app:errorIconTint="@color/custom_error_color"
                    app:errorTextColor="@color/custom_error_color"
                    app:hintTextColor="#809CFF"
                    app:layout_constraintTop_toBottomOf="@id/name"
                    tools:ignore="HardcodedText,MissingConstraints">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtFullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_edt_rectangle_light_blue"
                        android:ellipsize="start"
                        android:hint="Name"
                        android:maxLines="1"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="12dp"
                        android:singleLine="true"
                        android:textColorHint="#809CFF"
                        app:backgroundTint="@null"
                        tools:ignore="HardcodedText" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:text="Email"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/tFullName"
                    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
                    tools:layout_editor_absoluteX="2dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" "
                    app:errorIconTint="@color/custom_error_color"
                    app:errorTextColor="@color/custom_error_color"
                    app:hintTextColor="#809CFF"
                    app:layout_constraintTop_toBottomOf="@id/email"
                    tools:ignore="HardcodedText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_edt_rectangle_light_blue"
                        android:hint="example@example.com"
                        android:importantForAccessibility="no"
                        android:inputType="text"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="12dp"
                        android:textColorHint="#809CFF"
                        app:backgroundTint="@null"
                        tools:ignore="HardcodedText" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:text="Password"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:errorIconTint="@color/custom_error_color"
                    app:errorTextColor="@color/custom_error_color"
                    app:layout_constraintTop_toBottomOf="@+id/tEmail"
                    tools:ignore="HardcodedText"
                    tools:layout_editor_absoluteX="2dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" "
                    app:endIconMode="password_toggle"
                    app:errorIconTint="@color/custom_error_color"
                    app:errorTextColor="@color/custom_error_color"
                    app:hintTextColor="#809CFF"
                    app:layout_constraintTop_toBottomOf="@id/password"
                    tools:ignore="HardcodedText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_edt_rectangle_light_blue"
                        android:hint="Password"
                        android:maxLines="1"
                        android:inputType="textPassword"
                        android:importantForAccessibility="no"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="12dp"
                        android:textColorHint="#809CFF"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/number_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:text="Mobile Number"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/tPassword"
                    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
                    tools:layout_editor_absoluteX="2dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tNumberPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" "
                    app:errorIconTint="@color/custom_error_color"
                    app:errorTextColor="@color/custom_error_color"
                    app:hintTextColor="#809CFF"
                    app:layout_constraintTop_toBottomOf="@id/number_phone"
                    tools:ignore="HardcodedText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtNumberPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_edt_rectangle_light_blue"
                        android:hint="Phone Number"
                        android:importantForAccessibility="no"
                        android:inputType="number"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="12dp"
                        android:textColorHint="#809CFF"
                        app:backgroundTint="@null"
                        tools:ignore="HardcodedText" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:text="Date Of Birth"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/tNumberPhone"
                    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
                    tools:layout_editor_absoluteX="2dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" "
                    app:errorIconTint="@color/custom_error_color"
                    app:errorTextColor="@color/custom_error_color"
                    app:hintTextColor="#809CFF"
                    app:layout_constraintTop_toBottomOf="@id/date"
                    tools:ignore="HardcodedText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_edt_rectangle_light_blue"
                        android:clickable="true"
                        android:focusable="true"
                        android:hint="DD/MM/YY"
                        android:inputType="date"
                        android:importantForAccessibility="no"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="12dp"
                        android:textColorHint="#809CFF"
                        app:backgroundTint="@null"
                        tools:ignore="HardcodedText" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/const3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tDate"
                    app:layout_constraintVertical_bias="0.0"
                    tools:ignore="MissingConstraints,ObsoleteLayoutParam,UselessLeaf"
                    tools:layout_editor_absoluteX="2dp">

                    <TextView
                        android:id="@+id/message1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:paddingRight="10dp"
                        android:text="By continuing, you agree to "
                        android:textColor="#AB22B2FF"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/message1">

                        <TextView
                            android:id="@+id/tvTeamUse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"

                            android:text="Terms of Use "
                            android:textColor="#2260FF"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="and"
                            android:textColor="#AB22B2FF"
                            android:textSize="12sp"
                            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                        <TextView
                            android:id="@+id/tvPrivacy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=" Privacy Policy."
                            android:textColor="#2260FF"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnSignUp"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/custom_btn_oval_blue"
                        android:text="Sign Up"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        app:backgroundTint="@null"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="12dp"
                        android:text="or login with"
                        android:textColor="#2260FF"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/btnSignUp"
                        tools:ignore="HardcodedText" />

                    <LinearLayout
                        android:id="@+id/linear1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:baselineAligned="false"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/textView3">

                        <FrameLayout
                            android:layout_width="58dp"
                            android:layout_height="56dp"
                            android:layout_marginStart="5dp">

                            <Button
                                android:id="@+id/loginGoogle"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/custom_btn_circle_light_blue"
                                android:gravity="center"
                                android:text=""
                                app:backgroundTint="@null" />

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:src="@drawable/btn_google"
                                tools:ignore="ContentDescription" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="58dp"
                            android:layout_height="56dp"
                            android:layout_marginStart="5dp">

                            <Button
                                android:id="@+id/loginFacebook"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/custom_btn_circle_light_blue"
                                android:gravity="center"
                                android:text=""
                                app:backgroundTint="@null" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:src="@drawable/btn_oval_white_blue"
                                tools:ignore="ContentDescription" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:src="@drawable/btn_face2"
                                tools:ignore="ContentDescription" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="58dp"
                            android:layout_height="56dp"
                            android:layout_marginStart="5dp">

                            <Button
                                android:id="@+id/loginFingerprint"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/custom_btn_circle_light_blue"
                                android:gravity="center"
                                android:text=""
                                app:backgroundTint="@null" />

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:src="@drawable/btn_fingerprint"
                                tools:ignore="ContentDescription" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:baselineAligned="false"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linear1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Already have an account?"
                            android:textColor="#22B2FF"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/tvLogin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="Log in"
                            android:textColor="#2260FF"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>